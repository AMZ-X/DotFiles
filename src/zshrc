#!/bin/zsh
# ~/.zshrc
#
# ZSH - User configuration
#

# LANG
export LANG=en_US.UTF-8

# EDITOR
export EDITOR=nano

# Compilation flags
export ARCHFLAGS="-arch x86_64"

# SSH
export SSH_KEY_PATH="~/.ssh/rsa_id"

# Default
source /etc/profile

# Java
source ~/.zsh/java

# Android
source ~/.zsh/android

# Alias
source ~/.zsh/alias

# Theme
source ~/.zsh/theme

# Oh My ZSH
source ~/.zsh/oh-my-zsh

# Antibody (plugin manager)
source <(antibody init)
antibody bundle < ~/.zsh/plugins > ~/.zsh/plugins.sh
# source ~/.zsh/plugins.sh

# tabtab source for serverless package
# uninstall by removing these lines or running `tabtab uninstall serverless`
[[ -f /home/amz/.nvm/versions/node/v8.15.0/lib/node_modules/serverless/node_modules/tabtab/.completions/serverless.zsh ]] && . /home/amz/.nvm/versions/node/v8.15.0/lib/node_modules/serverless/node_modules/tabtab/.completions/serverless.zsh
# tabtab source for sls package
# uninstall by removing these lines or running `tabtab uninstall sls`
[[ -f /home/amz/.nvm/versions/node/v8.15.0/lib/node_modules/serverless/node_modules/tabtab/.completions/sls.zsh ]] && . /home/amz/.nvm/versions/node/v8.15.0/lib/node_modules/serverless/node_modules/tabtab/.completions/sls.zsh
# tabtab source for slss package
# uninstall by removing these lines or running `tabtab uninstall slss`
[[ -f /home/amz/.nvm/versions/node/v8.15.0/lib/node_modules/serverless/node_modules/tabtab/.completions/slss.zsh ]] && . /home/amz/.nvm/versions/node/v8.15.0/lib/node_modules/serverless/node_modules/tabtab/.completions/slss.zsh