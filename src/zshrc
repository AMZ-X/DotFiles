# ~/.zshrc

# LANG
export LANG=en_US.UTF-8

# EDITOR
export EDITOR=nano

# Compilation flags
export ARCHFLAGS="-arch x86_64"

# SSH
export SSH_KEY_PATH="~/.ssh/rsa_id"

# GIT
GIT_AUTHOR_NAME="Christopher Crouse"
GIT_COMMITTER_NAME="$GIT_AUTHOR_NAME"
GIT_AUTHOR_EMAIL="mail@amz-x.com"
GIT_COMMITTER_EMAIL="$GIT_AUTHOR_EMAIL"

# GIT Config
git config --global user.name "$GIT_AUTHOR_NAME"
git config --global user.email "$GIT_AUTHOR_EMAIL"

# Default
source /etc/profile

# Java
source ~/.zsh/java

# Android
source ~/.zsh/android

# Alias
source ~/.zsh/alias

# Theme
source ~/.zsh/theme

# Oh My ZSH
source ~/.zsh/oh-my-zsh

# Antibody (plugin manager)
antibody bundle < ~/.zsh/plugins > ~/.zsh/plugins.sh
source ~/.zsh/plugins.sh


# tabtab source for serverless package
# uninstall by removing these lines or running `tabtab uninstall serverless`
[[ -f /home/amz/Workspace/swarm/paperlessconstruction/api/node_modules/tabtab/.completions/serverless.zsh ]] && . /home/amz/Workspace/swarm/paperlessconstruction/api/node_modules/tabtab/.completions/serverless.zsh
